<% else %>

  <% @servings.each do |serving| %>
    <%= bootstrap_form_for Portion.new do |f| %>
      <%= serving.name %>
      <%= f.hidden_field :meal_id, value: @meal.id %>
      <%= f.hidden_field :serving_id, value: serving.id %>
